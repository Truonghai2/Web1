									<script>
										
										var btnDropdown = document.getElementById("open-dropdown");
									    var dropdownNoti = document.getElementById("dropdown-noti");
														
									    btnDropdown.addEventListener("click", function() {
									        if (dropdownNoti.style.display === "none") {
									            dropdownNoti.style.display = "block";
									            // Send a fetch request to the server
									            
									            
								                fetch('/BackEnd/getNoti')
								                    .then(response => {
								                        if (!response.ok) {
								                            throw new Error('Network response was not ok ' + response.statusText);
								                        }
								                        return response.json();
								                    })
								                    .then(data => {
								                    	
								                    	console.log(data);
								                       data.forEach(function(item){
								                    	   renderNotifications(item);
								                       })
								                    })
								                    .catch(error => {
								                        console.error('There has been a problem with your fetch operation:', error);
								                    });
									            
									            
									        } else {
									            dropdownNoti.style.display = "none";
									            $('.content-notification').html("");
									        }
									    });
									    
									    
									    
									    
									    function renderNotifications(notification) {
									 	   
										    const notificationRow = $('<tr>')
										        .attr('data-notification-id', notification.id)
										        .addClass('notification-item');
										
										
										    $('<td>').text(notification.content).appendTo(notificationRow);
										    $('<td>').text(notification.addDate).appendTo(notificationRow);
										
										    $('.content-notification').append(notificationRow);
										}
									</script>
